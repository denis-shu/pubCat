@model IEnumerable<Bolt.Models.Menu.MenuItem>
    @{
    ViewData["Title"] = "Index";
    }

    <br />
    <h2>Menu items</h2>
    <br />

    @Html.Partial("_CreateButtonPartial")

    <div class="form-border">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Price)</th>
                <th>@Html.DisplayNameFor(d=>d.CategoryId)</th>
                <th>@Html.DisplayNameFor(d=>d.SubCategoryId)</th>

                <th></th>
                <th></th>
            </tr>
            @foreach(var item in Model)   {
            <tr>
                <td>
                    @Html.DisplayFor(x=>item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x=>item.Price)
                </td>
 <td>
                    @Html.DisplayFor(x=>item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(x=>item.SubCategory.Name)
                </td>
                <td>@Html.Partial("_TableButtonPartial", item.Id)</td>
            </tr>

            }
        </table>
    </div>

